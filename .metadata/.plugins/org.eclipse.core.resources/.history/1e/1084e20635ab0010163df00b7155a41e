package com.klef.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.*;

import com.klef.entity.SevaBooking;
import com.klef.service.SevaBookingService;

@RestController
@RequestMapping("/sevaapi/")
@CrossOrigin(origins = "*")
public class SevaController {

    @Autowired
    private SevaBookingService sevaBookingService;

    @GetMapping("/")
    public String home() {
        return "Temple Seva Booking API";
    }

    @PostMapping("/add")
    public ResponseEntity<SevaBooking> addSevaBooking(@RequestBody SevaBooking sevaBooking) {
        SevaBooking savedSeva = sevaBookingService.addSevaBooking(sevaBooking);
        return new ResponseEntity<>(savedSeva, HttpStatus.CREATED);
    }

    @GetMapping("/all")
    public ResponseEntity<List<SevaBooking>> getAllSevaBookings() {
        List<SevaBooking> sevaList = sevaBookingService.getAllSevaBookings();
        return new ResponseEntity<>(sevaList, HttpStatus.OK);
    }

    @GetMapping("/get/{id}")
    public ResponseEntity<?> getSevaBookingById(@PathVariable int id) {
        SevaBooking sevaBooking = sevaBookingService.getSevaBookingById(id);
        if (sevaBooking != null) {
            return new ResponseEntity<>(sevaBooking, HttpStatus.OK);
        } else {
            return new ResponseEntity<>("Seva booking with ID " + id + " not found.", HttpStatus.NOT_FOUND);
        }
    }

    @PutMapping("/update")
    public ResponseEntity<?> updateSevaBooking(@RequestBody SevaBooking sevaBooking) {
        SevaBooking existing = sevaBookingService.getSevaBookingById(sevaBooking.getId());
        if (existing != null) {
            SevaBooking updatedSeva = sevaBookingService.updateSevaBooking(sevaBooking);
            return new ResponseEntity<>(updatedSeva, HttpStatus.OK);
        } else {
            return new ResponseEntity<>("Cannot update. Seva booking with ID " + sevaBooking.getId() + " not found.", HttpStatus.NOT_FOUND);
        }
    }

    @DeleteMapping("/delete/{id}")
    public ResponseEntity<String> deleteSevaBooking(@PathVariable int id) {
        SevaBooking existing = sevaBookingService.getSevaBookingById(id);
        if (existing != null) {
            sevaBookingService.deleteSevaBookingById(id);
            return new ResponseEntity<>("Seva booking with ID " + id + " deleted successfully.", HttpStatus.OK);
        } else {
            return new ResponseEntity<>("Cannot delete. Seva booking with ID " + id + " not found.", HttpStatus.NOT_FOUND);
        }
    }
}
